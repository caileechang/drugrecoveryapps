<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginTop="460dp"
        android:background="#68B8B8"
        android:backgroundTint="#68B8B8"
        android:fontFamily="sans-serif"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textColorLink="#68B8B8"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitbutton"
        android:layout_width="305dp"
        android:layout_height="49dp"
        android:layout_marginTop="536dp"
        android:background="#68B8B8"
        android:backgroundTint="#68B8B8"
        android:fontFamily="sans-serif"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textColorLink="#68B8B8"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/forgotPasswordEmail"
        android:layout_width="329dp"
        android:layout_height="53dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/rectanglebox"
        android:drawableEnd="@drawable/icon_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionPassword"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:layout_marginTop="124dp"
        android:text="Uh-oh! Forgotten your password? No problem! Just enter your email, and we'll send an OTP your way to get you back on track. Easy peasy!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

