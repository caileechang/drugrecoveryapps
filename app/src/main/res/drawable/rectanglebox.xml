<!-- res/drawable/edit_text_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#DADADA" /> <!-- Set the desired grey color for pressed state -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#DADADA" /> <!-- Set the desired grey color for focused state -->
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#DADADA" /> <!-- Set the desired default grey color -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
